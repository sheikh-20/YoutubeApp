<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_channel_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:src="@drawable/channel_pic"
        android:scaleType="centerCrop"
        android:contentDescription="@string/channel_pic"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        app:shapeAppearanceOverlay="@style/circleImageView"/>

    <TextView
        style="@style/TextAppearance.Material3.BodySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like Nastya"
        android:maxLines="1"
        android:layout_below="@id/iv_channel_pic"
        android:layout_alignStart="@id/iv_channel_pic"
        android:layout_alignEnd="@id/iv_channel_pic"
        android:textAlignment="center"/>

</RelativeLayout>